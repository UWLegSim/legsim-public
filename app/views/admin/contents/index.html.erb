<div id="overview" class="left-column">
  <div class="left-content">
  <%= form_for :contents, :url => { :action => :init } do |f| %>
    <h2>Reload Content Snippets</h2>

    <p>Reloading content snippets will destroy all current content snippets then
    reload them based on the chamber's scenerio.</p>
    <%= submit_tag "Reload Content Snippets", :class => 'btn blue-btn' %>
  <% end %><br />

  <%= link_button_to "Export Content Snippets", export_admin_contents_path, :class => 'btn blue-btn' %><br />
</div>
</div>

<div id="details" class="right-column">
  <div class="the-content">
  <%= link_button_to "New Content Snippet", new_admin_content_path, :class => 'btn blue-btn'%><br />

  <ul><% @chamber.contents.each do |content| %>
    <li><%= link_to content.reference, edit_admin_content_path(content)%></li>
  <% end %></ul>
</div>
</div>

