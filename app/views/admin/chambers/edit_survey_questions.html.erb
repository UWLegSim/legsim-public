<div id="overview" class="left-column">
  <div class="left-content">
  <%= content('manage-survey-questions') %>

  <%= form_for @chamber, :url => { :action => :init_survey_questions } do |f| %>
    <h2>Reload Survey Questions</h2>

    <p>Reloading the survey questions will destroy all current survey questions and any member answers
    and then reload survey questions based on the chamber's scenerio.</p>
    <%= submit_tag "Reload Survey Questions", :size => 'seventy' %>
  <% end %>

  <%= link_to "Return to Chamber Management", admin_chamber_path( @chamber ) %>
</div>
</div><!--overview-->

<div id="details" class="right-column">
  <div class="the-content">
  <h2>Existing Survey Questions</h2>

  <ul>
    <% @chamber.survey_questions.each do |survey_question| %>
      <li><%= survey_question.question %></li>
    <% end %>
  </ul>
</div>
</div>
